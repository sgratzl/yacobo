{
  "openapi": "3.0.3",
  "info": {
    "title": "YaCoBo REST API",
    "version": "1.0.0",
    "contact": {
      "name": "Samuel Gratzl",
      "email": "sam@sgratzl.com",
      "url": "https://www.sgratzl.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local server"
    },
    {
      "url": "https://yacobo.vercel.app/api",
      "description": "Production server"
    },
    {
      "url": "https://yacobo-git-develop.sgratzl.vercel.app/",
      "description": "Development server"
    }
  ],
  "paths": {
    "/signal": {
      "get": {
        "summary": "returns signal meta data",
        "responses": {
          "200": {
            "description": "signal meta data info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SignalMeta"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/region/{region}": {
      "get": {
        "summary": "redirects to the latest date",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          }
        ],
        "responses": {
          "403": {
            "description": "redirect to the latest date"
          }
        }
      }
    },
    "/region/{region}/date/{date}": {
      "get": {
        "summary": "returns region summary",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/date"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Signal"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/region/{region}/{signal}": {
      "get": {
        "summary": "returns region signal history",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/signal"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/region/{region}/{signal}/{date}": {
      "get": {
        "summary": "returns region signal history",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/signal/{signal}": {
      "get": {
        "summary": "redirects to the latest date",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          }
        ],
        "responses": {
          "403": {
            "description": "redirect to the latest date"
          }
        }
      }
    },
    "/signal/date/{date}": {
      "get": {
        "summary": "returns alls signals",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          }
        ],
        "responses": {
          "200": {
            "description": "signal region info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "type": "object",
                        "additionalProperties": true
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/signal/{signal}/{date}": {
      "get": {
        "summary": "returns signal for all regions",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          }
        ],
        "responses": {
          "200": {
            "description": "signal region info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignalMeta": {
        "type": "object",
        "properties": {
          "signal": {
            "type": "string"
          },
          "mean": {
            "type": "number"
          },
          "stdev": {
            "type": "number"
          },
          "minTime": {
            "type": "string",
            "format": "date-time"
          },
          "maxTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["signal", "mean", "stdev", "minTime", "maxTime"]
      },
      "Value": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "nullable": true
          },
          "stderr": {
            "type": "number",
            "nullable": true
          }
        }
      },
      "Region": {
        "type": "object",
        "properties": {
          "region": {
            "type": "string"
          }
        },
        "required": ["region"]
      },
      "Signal": {
        "type": "object",
        "properties": {
          "signal": {
            "type": "string"
          }
        },
        "required": ["signal"]
      },
      "Date": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["date"]
      },
      "GeneralError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
      "region": {
        "name": "region",
        "in": "path",
        "description": "The region to query",
        "required": true,
        "examples": {
          "42": {
            "description": "42 - Pennsylvania",
            "value": "42"
          },
          "42003": {
            "description": "42003 - Allegheny County",
            "value": "42003"
          }
        },
        "schema": {
          "type": "string"
        }
      },
      "signal": {
        "name": "signal",
        "in": "path",
        "description": "The signal to query",
        "required": true,
        "examples": {
          "fb_survey": {
            "description": "Showing Symptoms",
            "value": "fb_survey"
          },
          "doctors_visits": {
            "description": "Doctor Visits",
            "value": "doctors_visits"
          },
          "cases": {
            "description": "Confirmed Cases",
            "value": "cases"
          },
          "antigen_tests": {
            "description": "COVID-19 Antigen Tests",
            "value": "antigen_tests"
          },
          "hospital_admissions": {
            "description": "Hospital Admissions",
            "value": "hospital_admissions"
          },
          "deaths": {
            "description": "Confirmed Deaths",
            "value": "deaths"
          }
        },
        "schema": {
          "type": "string"
        }
      },
      "date": {
        "name": "date",
        "in": "path",
        "description": "The date to query",
        "required": true,
        "example": "2020-07-02",
        "schema": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Entity not found."
      },
      "GeneralError": {
        "description": "General Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GeneralError"
            }
          }
        }
      }
    }
  }
}
