{
  "openapi": "3.0.3",
  "info": {
    "title": "YaCoBo REST API",
    "version": "1.0.0",
    "contact": {
      "name": "Samuel Gratzl",
      "email": "sam@sgratzl.com",
      "url": "https://www.sgratzl.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local server"
    },
    {
      "url": "https://yacobo.vercel.app/api",
      "description": "Production server"
    },
    {
      "url": "https://yacobo-git-develop.sgratzl.vercel.app/",
      "description": "Development server"
    }
  ],
  "paths": {
    "/signal": {
      "get": {
        "summary": "returns signal meta data",
        "parameters": [],
        "responses": {
          "200": {
            "description": "signal meta data info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SignalMeta"
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/region/{region}": {
      "get": {
        "summary": "redirects to the latest date",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "403": {
            "description": "redirect to the latest date"
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/region/{region}/date/{date}": {
      "get": {
        "summary": "returns region summary",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/date"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Signal"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/region/{region}/{signal}": {
      "get": {
        "summary": "returns region signal history",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/signal"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/region/{region}/{signal}/{date}": {
      "get": {
        "summary": "returns region signal history",
        "parameters": [
          {
            "$ref": "#/components/parameters/region"
          },
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "signal date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/signal/{signal}": {
      "get": {
        "summary": "redirects to the latest date",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "403": {
            "description": "redirect to the latest date"
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/signal/date/{date}": {
      "get": {
        "summary": "returns alls signals",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "signal region info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/MultiSignal"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/signal/{signal}/{date}": {
      "get": {
        "summary": "returns signal for all regions",
        "parameters": [
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "signal region info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/compare/{regions}/{signal}": {
      "get": {
        "summary": "returns history of the signal for the given regions",
        "parameters": [
          {
            "$ref": "#/components/parameters/regions"
          },
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "region date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    },
    "/compare/{regions}/{signal}/{date}": {
      "get": {
        "summary": "returns history of the signal for the given regions",
        "parameters": [
          {
            "$ref": "#/components/parameters/regions"
          },
          {
            "$ref": "#/components/parameters/signal"
          },
          {
            "$ref": "#/components/parameters/date"
          },
          {
            "$ref": "#/components/parameters/plain"
          }
        ],
        "responses": {
          "200": {
            "description": "region date info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Value"
                      },
                      {
                        "$ref": "#/components/schemas/Region"
                      },
                      {
                        "$ref": "#/components/schemas/Date"
                      },
                      {
                        "$ref": "#/components/schemas/Details"
                      }
                    ]
                  }
                }
              }
            }
          },
          "5XX": {
            "$ref": "#/components/responses/GeneralError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignalMeta": {
        "type": "object",
        "properties": {
          "signal": {
            "type": "string"
          },
          "mean": {
            "type": "number"
          },
          "stdev": {
            "type": "number"
          },
          "minTime": {
            "type": "string",
            "format": "date-time"
          },
          "maxTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["signal", "mean", "stdev", "minTime", "maxTime"]
      },
      "Value": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "nullable": true
          },
          "stderr": {
            "type": "number",
            "nullable": true
          }
        }
      },
      "Region": {
        "type": "object",
        "properties": {
          "region": {
            "type": "string"
          }
        },
        "required": ["region"]
      },
      "Signal": {
        "type": "object",
        "properties": {
          "signal": {
            "type": "string"
          }
        },
        "required": ["signal"]
      },
      "Date": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["date"]
      },
      "Details": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "region": {
            "type": "string"
          },
          "regionName": {
            "type": "string"
          },
          "regionPopulation": {
            "type": "number",
            "nullable": true
          },
          "regionState": {
            "type": "string"
          },
          "signal": {
            "type": "string"
          },
          "signalName": {
            "type": "string"
          }
        },
        "required": ["date", "region", "regionName", "signal", "signalName"]
      },
      "MultiSignal": {
        "type": "object",
        "properties": {}
      },
      "GeneralError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
      "region": {
        "name": "region",
        "in": "path",
        "description": "The region to query",
        "required": true,
        "examples": {
          "42": {
            "description": "42 - Pennsylvania",
            "value": "42"
          },
          "42003": {
            "description": "42003 - Allegheny County",
            "value": "42003"
          }
        },
        "schema": {
          "type": "string"
        }
      },
      "regions": {
        "name": "regions",
        "in": "path",
        "description": "The regions to compare",
        "required": true,
        "examples": {
          "42,42003": {
            "description": "Pennsylvania vs. Allegheny County",
            "value": "42,42003"
          },
          "06,36": {
            "description": "California vs. New York",
            "value": "06,36"
          }
        },
        "style": "simple",
        "schema": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "signal": {
        "name": "signal",
        "in": "path",
        "description": "The signal to query",
        "required": true,
        "examples": {
          "fb_survey": {
            "description": "Showing Symptoms",
            "value": "fb_survey"
          }
        },
        "schema": {
          "type": "string",
          "enum": ["fb_survey"]
        }
      },
      "date": {
        "name": "date",
        "in": "path",
        "description": "The date to query",
        "required": true,
        "examples": {
          "2020-07-02": {
            "description": "specific date",
            "value": "2020-07-02"
          },
          "latest": {
            "description": "latest date",
            "value": "latest"
          }
        },
        "schema": {
          "oneOf": [
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "string",
              "enum": ["latest", "earliest"]
            }
          ]
        }
      },
      "scale": {
        "name": "scale",
        "in": "query",
        "description": "Scale the returned image by the given factor",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 1
        }
      },
      "dpr": {
        "name": "dpr",
        "in": "query",
        "description": "Render the image X times in the resolution to accommodate device pixel ratio (dpr)",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 1
        }
      },
      "plain": {
        "name": "plain",
        "in": "query",
        "description": "Return only plain in the JSON/CSV file",
        "required": false,
        "allowEmptyValue": true,
        "schema": {
          "type": "boolean"
        }
      },
      "plainVG": {
        "name": "plain",
        "in": "query",
        "description": "No data in the VEGA spec file",
        "required": false,
        "allowEmptyValue": true,
        "schema": {
          "type": "boolean"
        }
      },
      "highlightRegion": {
        "name": "highlight",
        "in": "query",
        "description": "Highlight the given region in the image",
        "required": false,
        "schema": {
          "type": "string"
        }
      },
      "highlightDate": {
        "name": "highlight",
        "in": "query",
        "description": "Highlight the given date in the image",
        "required": false,
        "schema": {
          "type": "string",
          "format": "date"
        }
      },
      "download": {
        "name": "download",
        "in": "query",
        "description": "set the content-disposition header to trigger a download",
        "required": false,
        "allowEmptyValue": true,
        "schema": {
          "type": "boolean"
        }
      },
      "chart": {
        "name": "chart",
        "in": "query",
        "description": "specify the chart type: map or histogram",
        "required": false,
        "schema": {
          "type": "string",
          "enum": ["histogram", "map"]
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Entity not found"
      },
      "CSV": {
        "description": "CSV File",
        "content": {
          "text/csv": {
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "PNG": {
        "description": "PNG File",
        "content": {
          "image/png": {
            "schema": {
              "type": "string",
              "format": "binary"
            }
          }
        }
      },
      "JPG": {
        "description": "JPEG File",
        "content": {
          "image/jpeg": {
            "schema": {
              "type": "string",
              "format": "binary"
            }
          }
        }
      },
      "PDF": {
        "description": "PDF File",
        "content": {
          "application/pdf": {
            "schema": {
              "type": "string",
              "format": "binary"
            }
          }
        }
      },
      "VG": {
        "description": "Vega Spec File",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "https://vega.github.io/schema/vega-lite/v4.json"
            }
          }
        }
      },
      "GeneralError": {
        "description": "General Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GeneralError"
            }
          }
        }
      }
    }
  }
}
